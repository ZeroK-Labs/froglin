{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "./",
    "target": "ES2020",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true,
    "allowArbitraryExtensions": false,
    "allowUnreachableCode": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "types": ["bun-types", "ws"]
  },
  "include": [
    "backend/**/*.ts",
    "common/**/*.ts",
    "common/loadenv.js",
    "aztec/contracts/**/artifact/*.ts",
    "aztec/contracts/**/target/*.json",
    "frontend/**/*.ts*",
    "tests/**/*.ts"
  ],
  "exclude": ["**/node_modules", "build"]
}
